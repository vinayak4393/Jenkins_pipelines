pipeline{
    agent any

    stages{
        stage('CHECKOUT 1') {
            steps{                
                catchError(stageResult:'FAILURE', buildResult:'SUCCESS'){
                    sh 'exit 1'
                }                                               
            }
        }
        stage('CHECK CHECKOUT 1') {            
            steps{
               
                sh '''
                    pwd
                    git branch
                    ls -lrt
                '''               
            }
        }
        post{
            success{
                echo "post action on success"
            }failure{
                echo "post action on failure"
            }always{
                echo "post action always"
            }
        }     
    }
}