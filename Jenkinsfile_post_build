pipeline{
    agent any

    stages{
        stage('CHECKOUT 1') {
            steps{                
                echo "echeckout"
                sh 'ls -lrt'
                }                                               
            }
        }
        stage('CHECK CHECKOUT 1') {            
            steps{
               
                sh '''
                    pwd
                    git branch
                    ls -lrt
                    
                '''               
            }
        }
    }    
    post {
            success {
                echo "post action on success"
            } 
            failure {
                echo "post action on failure"
            } 
            always {
                echo "post action always"
            }     

    }
}